# Database Environment Variables for NexaNest
# Copy this file to .env.db and update with your values

# PostgreSQL Configuration
POSTGRES_PASSWORD=nexanest_secure_password_change_me
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=nexanest
POSTGRES_DB=nexanest

# TimescaleDB Configuration
TIMESCALE_PASSWORD=timescale_secure_password_change_me
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USER=timescale
TIMESCALE_DB=timescale

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_change_me
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# PgAdmin Configuration
PGADMIN_EMAIL=admin@nexanest.local
PGADMIN_PASSWORD=pgadmin_secure_password_change_me

# Database URLs for services
DATABASE_URL_AUTH=postgresql://nexanest:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/auth
DATABASE_URL_PORTFOLIO=postgresql://nexanest:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/portfolio
DATABASE_URL_ANALYTICS=postgresql://nexanest:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/analytics
DATABASE_URL_NOTIFICATIONS=postgresql://nexanest:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/notifications

# TimescaleDB URLs
TIMESCALE_URL_MARKET_DATA=postgresql://timescale:${TIMESCALE_PASSWORD}@${TIMESCALE_HOST}:${TIMESCALE_PORT}/timescale
TIMESCALE_URL_ANALYTICS=postgresql://timescale:${TIMESCALE_PASSWORD}@${TIMESCALE_HOST}:${TIMESCALE_PORT}/timescale

# Redis URLs
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
REDIS_CACHE_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1
REDIS_SESSION_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/2