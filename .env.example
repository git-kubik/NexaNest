# Environment Configuration for NexaNest

# General
DEBUG=true
ENVIRONMENT=development

# Auth Service
AUTH_SECRET_KEY=your-secret-key-here-change-in-production
AUTH_DATABASE_URL=postgresql+asyncpg://nexanest:nexanest_dev_password@localhost:5432/nexanest_auth
AUTH_REDIS_URL=redis://localhost:6379/0

# Portfolio Service
PORTFOLIO_DATABASE_URL=postgresql+asyncpg://nexanest:nexanest_dev_password@localhost:5432/nexanest_portfolio
PORTFOLIO_REDIS_URL=redis://localhost:6379/1

# Market Data Service
MARKET_DATA_REDIS_URL=redis://localhost:6379/2
TIMESCALE_URL=postgresql+asyncpg://nexanest:nexanest_dev_password@localhost:5433/nexanest_timeseries

# AI/ML Service
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
POLYGON_API_KEY=your-polygon-api-key
IEX_CLOUD_API_KEY=your-iex-cloud-api-key

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@nexanest.com

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_HOST=localhost
JAEGER_PORT=6831

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Superuser (for initial setup)
FIRST_SUPERUSER=admin@nexanest.com
FIRST_SUPERUSER_PASSWORD=changeme123!