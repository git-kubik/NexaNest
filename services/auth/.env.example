# =============================================================================
# Auth Service Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Service-specific configuration for the authentication service
# =============================================================================

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
SERVICE_NAME=auth-service
SERVICE_PORT=8001
SERVICE_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=false

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=NexaNest Auth Service

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Connection
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=nexanest
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=auth

# Constructed Database URL (uses above variables)
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# Constructed Redis URL
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Configuration - CRITICAL: Change in production
SECRET_KEY=your_very_secure_secret_key_minimum_32_characters_long
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Password Hashing
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_EXPIRE_MINUTES=1440

# =============================================================================
# OAUTH2 PROVIDERS
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_app_password
EMAILS_FROM_EMAIL=noreply@nexanest.com
EMAILS_FROM_NAME=NexaNest

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# INITIAL SUPERUSER
# =============================================================================
FIRST_SUPERUSER=admin@nexanest.com
FIRST_SUPERUSER_PASSWORD=your_secure_admin_password_here

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# DOCKER SECRETS (Production)
# =============================================================================
# These variables point to Docker secret files in production
SECRET_KEY_FILE=/run/secrets/secret_key
POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
REDIS_PASSWORD_FILE=/run/secrets/redis_password
GOOGLE_CLIENT_SECRET_FILE=/run/secrets/google_client_secret
GITHUB_CLIENT_SECRET_FILE=/run/secrets/github_client_secret
SMTP_PASSWORD_FILE=/run/secrets/smtp_password
FIRST_SUPERUSER_PASSWORD_FILE=/run/secrets/first_superuser_password